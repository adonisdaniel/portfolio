---
interface Props {
  title: string;
  description: string;
  stack: string[];
  preview?: string;
}

const { title, description, stack, preview } = Astro.props;
---

<article class="project-card">
  <div class="project-content">
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    
    <div class="project-stack">
      <span class="stack-label">STACK:</span>
      <div class="stack-tags">
        {stack.map((tech) => (
          <span class="stack-tag">{tech}</span>
        ))}
      </div>
    </div>
    
    {preview && (
      <a href={preview} target="_blank" rel="noopener noreferrer" class="project-link">
        VIEW PROJECT
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 8H13M13 8L9 4M13 8L9 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    )}
  </div>
</article>

<style>
  .project-card {
    background: rgba(0, 166, 251, 0.03);
    border: 1px solid rgba(0, 166, 251, 0.1);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  /* Efecto de brillo sutil en hover */
  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 166, 251, 0.05),
      transparent
    );
    transition: left 0.5s ease;
  }

  .project-card:hover::before {
    left: 100%;
  }

  .project-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 8px 24px rgba(0, 166, 251, 0.15);
    transform: translateY(-4px);
  }

  .project-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-title {
    color: var(--text-heading);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: -0.02em;
    transition: color 0.3s ease;
  }

  .project-card:hover .project-title {
    color: var(--color-primary);
  }

  .project-description {
    color: var(--text-body);
    font-size: 1rem;
    line-height: 1.7;
    margin: 0;
  }

  .project-stack {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .stack-label {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
  }

  .stack-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .stack-tag {
    background: rgba(0, 166, 251, 0.1);
    color: var(--color-primary);
    padding: 0.375rem 0.875rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    border: 1px solid rgba(0, 166, 251, 0.2);
    transition: all 0.3s ease;
  }

  .stack-tag:hover {
    background: rgba(0, 166, 251, 0.2);
    border-color: var(--color-primary);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    text-decoration: none;
    margin-top: 0.5rem;
    transition: all 0.3s ease;
    width: fit-content;
    padding: 0.5rem 0;
  }

  .project-link svg {
    transition: transform 0.3s ease;
  }

  .project-link:hover {
    color: var(--color-primary-dark);
    gap: 0.75rem;
  }

  .project-link:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (width <= 768px) {
    .project-card {
      padding: 1.5rem;
    }

    .project-title {
      font-size: 1.25rem;
    }

    .project-description {
      font-size: 0.95rem;
    }
  }
</style>
