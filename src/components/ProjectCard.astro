---
interface Props {
  title: string;
  description: string;
  stack: string[];
  preview?:string
}

const { title, description, stack,preview } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <p>{description}</p>
  <div>
    <p>STACK: {stack.map((el) => <span><strong>{el}</strong></span>)}</p>
  </div>
  {preview && <a href={preview} target="_blank">PREVIEW</a>}
</div>
